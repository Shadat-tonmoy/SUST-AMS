<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/course_weight_confirmation_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:text="Please Make Notice..." />

    <android.support.v7.widget.CardView
        android:id="@+id/course_weight_confirmation_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_weight_confirmation_dialog_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/class_weight_confirmation_dialog_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_weight_confirmation_dialog_title"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="#16a085"
                android:textAlignment="center"
                android:text="To continue with the system you need to set a weight for the new class instance. By default it is 1. " />


            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="#16a085"
                    android:textAlignment="center"
                    android:text="Choose Course Weight"
                    />
                <Spinner
                    android:id="@+id/course_weight_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/course_weight_confirmation_dialog_msg"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:padding="10dp"
                    ></Spinner>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>