<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:adroid="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/past_record_date_icon"
                android:layout_width="60dp"
                android:layout_height="65dp"
                app:cardElevation="4dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/past_record_numeric_date_view"
                        style="@style/homeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:text="07"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/past_record_month_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="February"
                        android:background="#1F7244"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="13sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/past_record_date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/past_record_date_icon"
                android:layout_toEndOf="@+id/past_record_date_icon"
                android:layout_toRightOf="@+id/past_record_date_icon"
                android:text="Wednesday"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/past_record_class_weight_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Weight 1"
                android:textColor="#7f8c8d"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/past_record_date_view"
                android:layout_toRightOf="@+id/past_record_date_icon"
                android:layout_toEndOf="@+id/past_record_date_icon" />

            <TextView
                android:id="@+id/past_record_absent_present_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:textColor="#ffffff"
                android:background="@drawable/absent_background"
                android:textSize="12sp"
                android:layout_below="@+id/past_record_class_weight_view"
                android:padding="3dp"
                android:layout_marginTop="2dp"
                android:layout_alignLeft="@+id/past_record_date_view"
                android:textAlignment="center"
                android:layout_alignStart="@+id/past_record_date_view" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

